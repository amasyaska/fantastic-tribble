{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"baseUrl": "./src",
		"paths": {
			"@components/*": ["./components/*"],
			"@pages/*": ["./pages/*"],
			"@hooks/*": ["./hooks/*"],
			"@configs/*": ["./configs/*"],
			"@services/*": ["./services/*"],
			"@lib/*": ["./lib/*"],
			"@ctypes/*": ["./types/*"], // custom types
			"@ui/*": ["./components/ui/*"],
			"@store/*": ["./store/*"]
		}
	},
	"include": ["src"]
}
